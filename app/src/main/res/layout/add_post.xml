<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yello_background"
    tools:context=".ui.InNeed.AddPostRecordFragment"
    android:textColorHint="@color/dark_grey_elements"
    android:textColor="@color/dark_grey_elements"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_serviceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/service_type_text"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_serviceType"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>



    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_marginBottom="5dp"
        android:text="@string/address_text"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/post_zip1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:minHeight="19sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/text_address"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/post_city1"
        android:layout_width="wrap_content"
        android:minWidth="280dp"
        android:layout_height="wrap_content"
        android:minHeight="19sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/text_address"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/post_zip1"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_zip1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="@string/description_text1"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/post_description1"
        android:layout_width="match_parent"
        android:minHeight="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_description1"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_incentive1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_description1"
        android:layout_marginBottom="5dp"
        android:text="@string/motivation_text"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/post_incentive1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="19sp"
        android:layout_below="@id/text_incentive1"
        android:layout_marginBottom="5dp"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_incentive1"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_design"
        android:text="@string/button_save"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hidden_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />


</RelativeLayout>