<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/light_yello_background"
    tools:context=".ui.InNeed.AddPostRecordFragment"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_incentive1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/warning"
        android:textColorHint="@color/dark_grey_elements"
        android:textColor="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <EditText
        android:id="@+id/report_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="19sp"
        android:layout_below="@id/text_incentive1"
        android:layout_marginBottom="5dp"
        android:hint="@string/hint_text"
        android:textColorHint="@color/dark_grey_elements"
        android:textColor="@color/dark_grey_elements"
        android:textSize="18sp" />

</RelativeLayout>