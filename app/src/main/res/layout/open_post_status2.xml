<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yello_background"
    tools:context=".ui.NeedsAndDeeds.OtherStatusPostRecordFragment"
    android:padding="10dp">

    <ImageView
        android:id="@+id/author_image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:contentDescription="author's picture"
        android:src="@drawable/anonymous_mask" />

    <TextView
        android:id="@+id/author_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/author_rating2"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/author_image2"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_author_rating"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_name2"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/author_image2"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:text="@string/rating_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/author_rating2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_zip2"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/text_author_rating"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textAlignment="viewStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/post_zip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_description2"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/author_image2"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/post_city2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_description2"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/post_zip2"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/post_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_description2"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_image2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="@string/description_text2"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/post_incentive2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_description2"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/text_incentive2"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_incentive2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_description2"
        android:layout_marginBottom="5dp"
        android:text="@string/incentive_text"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/author_phone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_incentive2"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/text_phone2"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_phone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_incentive2"
        android:layout_marginBottom="5dp"
        android:text="@string/phone_text"
        android:textColor="@color/dark_grey_elements"
        android:textColorHint="@color/dark_grey_elements"
        android:textSize="18sp"
        android:textStyle="bold"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/complete"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_phone2"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_design"
        android:text="@string/button_complete"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_phone2"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="false"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_design"
        android:text="@string/button_complete"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contact_2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_phone2"
        android:layout_alignStart="@id/complete"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="false"
        android:layout_margin="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_design"

        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reportButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/complete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="false"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_design"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/authorRatingBar2"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/post_zip2"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/text_author_rating"/>

</RelativeLayout>