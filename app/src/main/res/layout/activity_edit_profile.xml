<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:background="@drawable/dialog_background"
    >

    <TextView
        android:id="@+id/profileLastNameTextView2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/edit_lastName"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AuthorNameTextView" />

    <TextView
        android:id="@+id/labelCityTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/profile_address"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLastNameTextView2" />

    <TextView
        android:id="@+id/labelZipcodeTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/profile_zipcode"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelCityTextView" />

    <TextView
        android:id="@+id/labelPhoneNumberTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="@string/profile_phone_number"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelZipcodeTextView" />

    <TextView
        android:id="@+id/AuthorNameTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/edit_firstName"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authFirstNameTextView"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textAlignment="viewStart"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/AuthorNameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/labelCityTextView"
        app:layout_constraintTop_toBottomOf="@+id/authLastNameTextView" />

    <EditText
        android:id="@+id/zipEditText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/labelZipcodeTextView"
        app:layout_constraintTop_toBottomOf="@+id/cityEditText" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="bottom"
        android:inputType="textPersonName|phone"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/labelPhoneNumberTextView"
        app:layout_constraintTop_toBottomOf="@+id/zipEditText" />

    <TextView
        android:id="@+id/authLastNameTextView"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"

        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/profileLastNameTextView2"
        app:layout_constraintTop_toBottomOf="@+id/authFirstNameTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateButton"
        android:layout_width="160dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_design"
        android:text="@string/profile_update"
        android:textColor="@color/dark_grey_elements"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelPhoneNumberTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>