<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker_yellow">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="366dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/your_profile"
        android:textColor="@color/darker_grey_elements"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileFirstNameTextView"
        android:layout_width="170dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:text="@string/profile_firstName"
        android:textAlignment="viewEnd"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileLastNameTextView"
        android:layout_width="170dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="@string/profile_lastName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/profileFirstNameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileZipcodeTextView"
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/profile_zipcode"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEmailTextView" />

    <TextView
        android:id="@+id/profileCityTextView"
        android:layout_width="143dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="@string/profile_address"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileEmailTextView" />

    <Button
        android:id="@+id/profileEditButton"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/profile_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileCityTextView" />

    <TextView
        android:id="@+id/profilePhoneNumTextView"
        android:layout_width="143dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/profile_phone_number"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileFirstNameTextView" />

    <TextView
        android:id="@+id/profileEmailTextView"
        android:layout_width="143dp"
        android:layout_height="23dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/profile_email"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoneNumTextView" />

    <ImageView
        android:id="@+id/profilePicimageView"
        android:layout_width="101dp"
        android:layout_height="117dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileLastNameTextView"
        app:srcCompat="@drawable/anonymous_mask" />

</androidx.constraintlayout.widget.ConstraintLayout>
